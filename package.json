{
  "name": "@vapurrmaid/my-bookshelf",
  "version": "0.3.1",
  "scripts": {
    "build": "cross-env ./scripts/build.sh",
    "clean": "rimraf dist",
    "lint": "npm-run-all lint:*",
    "lint:md": "prettier --write **/*.md",
    "release": "release-it"
  },
  "dependencies": {},
  "devDependencies": {
    "clean-css-cli": "^4.3.0",
    "cross-env": "^6.0.3",
    "html-minifier": "^4.0.0",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "markdownlint-cli": "^0.20.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "release-it": "^12.4.3",
    "rimraf": "^3.0.0",
    "showdown": "^1.9.1"
  },
  "private": true,
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.md": [
      "prettier --write",
      "git add"
    ]
  },
  "release-it": {
    "git": {
      "commitArgs": "--gpg-sign",
      "commitMessage": ":rocket: v${version}",
      "tagAnnotation": "v${version}",
      "tagArgs": "--sign"
    },
    "github": {
      "release": true,
      "releaseName": "Release ${version}",
      "tokenRef": "RELEASE_IT_GITHUB_TOKEN"
    },
    "npm": {
      "publish": false
    }
  }
}
